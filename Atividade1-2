//Fiquei em dúvida qual era o código certo então fiz os dois tipos
#include <stdio.h>

int main()
{
    int num;
    int soma;
    printf("Digite o numero a qual deseja imprimir a tabuada: ");
    scanf ("%d", &num);
   
printf("\n\n--------------\n");

printf("TABUADA DO %d\n",num);

printf("-------------\n");
for (int e=1;e<=num;e++){
    for (int i=1;i<=10;i++){
        soma = e*i;
        printf ("%dx %d = %d\n",e,i,soma);
         
    }
}
   
   
    return 0;
}